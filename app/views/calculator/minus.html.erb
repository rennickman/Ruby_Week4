<h1>Simple Calculator</h1>

<%= form_with url: '/sum', local: true, data: {turbo: false} do |f| %>

    <%= text_field_tag :number1 %>

    <%= text_field_tag :number2 %>

    <%= submit_tag '+' %>

<% end %>

<br>

<%= form_with url: '/minus', local: true, data: {turbo: false} do |f| %>

    <%= text_field_tag :number1 %>

    <%= text_field_tag :number2 %>

    <%= submit_tag '-' %>

<% end %>

<br>

<%= form_with url: '/multiplication', local: true, data: {turbo: false} do |f| %>

    <%= text_field_tag :number1 %>

    <%= text_field_tag :number2 %>

    <%= submit_tag '*' %>

<% end %>

<br>

<%= form_with url: '/division', local: true, data: {turbo: false} do |f| %>

    <%= text_field_tag :number1 %>

    <%= text_field_tag :number2 %>

    <%= submit_tag '/' %>

<% end %>

<hr>

<h1>Minus</h1><br>

<%= @num1 %> - <%= @num2 %> = <%= @result %>